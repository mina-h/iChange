<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".StartActivity">


    <ImageView
        android:id="@+id/final_image"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_margin="30dp"

        android:layout_centerHorizontal="true"/>

   <TextView
       android:id="@+id/final_image_name"
       android:layout_below="@+id/final_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Image name"
       android:layout_centerHorizontal="true"
       android:layout_margin="8dp"
       />
    <TextView
        android:id="@+id/final_image_exchange_with"
        android:layout_below="@+id/final_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange with"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"

        />
    <TextView
        android:id="@+id/dealer_name"
        android:layout_below="@+id/final_image_exchange_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer name"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"

        />
    <TextView
        android:id="@+id/dealer_number"
        android:layout_below="@+id/dealer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer number"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/dealer_email"
        android:layout_below="@+id/dealer_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer email"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        />



</RelativeLayout>